{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es2017"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "paths": {
      "@/*": ["src/*"]
      // "react-native-redash/lib/module/v1": [
      //   "./node_modules/react-native-redash/lib/typescript/v1/index.d.ts"
      // ]
    },
    "typeRoots": [
      "src",
      "./node_modules/@types",
    ]
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
